---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/forms/ContactForm';
import ContactInfo from '../components/contact/ContactInfo.astro';
---

<Layout title="Contact Us">
  <div class="container mx-auto px-4 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Contact Us</h1>
      <p class="text-xl text-gray-600">Get in touch for a free consultation</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>
          <ContactForm client:load />
        </div>
      </div>

      <div class="space-y-8">
        <ContactInfo />
        
        <div class="bg-white p-6 rounded-lg shadow-md h-[400px]">
          <h2 class="text-2xl font-bold mb-6">Find Us</h2>
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.9916256937595!2d2.2922926156744775!3d48.858370079287466!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e2964e34e2d%3A0x8ddca9ee380ef7e0!2sEiffel%20Tower!5e0!3m2!1sen!2sus!4v1644834253117!5m2!1sen!2sus"
            width="100%"
            height="100%"
            style="border:0;"
            loading="lazy"
            class="rounded"
          ></iframe>
        </div>
      </div>
    </div>
  </div>
</Layout>