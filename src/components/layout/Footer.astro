---
import {contactInfo} from "../../constants/contactInfo";
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white py-12">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <div>
                <h3 class="text-xl font-bold mb-4">BuildPro</h3>
                <p class="text-gray-400">
                    Professional construction and renovation services you can trust.
                </p>
            </div>

            <div>
                <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                <ul class="space-y-2">
                    <li><a href="/about" class="text-gray-400 hover:text-white">Over ons</a></li>
                    <li><a href="/services" class="text-gray-400 hover:text-white">Diensten</a></li>
                    <li><a href="/projects" class="text-gray-400 hover:text-white">Projecten</a></li>
                    <li><a href="/contact" class="text-gray-400 hover:text-white">Contact</a></li>
                </ul>
            </div>

            <div>
                <h4 class="text-lg font-semibold mb-4">Services</h4>
                <ul class="space-y-2">
                    <li><a href="/services#renovation" class="text-gray-400 hover:text-white">Renovatie</a></li>
                    <li><a href="/services#remodeling" class="text-gray-400 hover:text-white">Remodeling</a></li>
                    <li><a href="/services#painting" class="text-gray-400 hover:text-white">Painting</a></li>
                    <li><a href="/services#tiling" class="text-gray-400 hover:text-white">Tiling</a></li>
                </ul>
            </div>

            <div>
                <h4 class="text-lg font-semibold mb-4">Contact</h4>
                <ul class="space-y-2 text-gray-400">
                    <li>{contactInfo.address}</li>
                    <li>Phone: {contactInfo.phone}</li>
                    <li>Email: {contactInfo.email}</li>
                </ul>
            </div>
        </div>

        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
            <p>&copy; {currentYear} Glenn Molenaar BV. | Alle rechten voorbehoud.</p>
        </div>
    </div>
</footer>