---
import {contactInfo} from "../../constants/contactInfo";
---

<div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-6">Contact informatie</h2>

    <div class="space-y-4">
        <div>
            <h3 class="font-semibold text-gray-700">Adres</h3>
            <p class="text-gray-600">{contactInfo.address}</p>
        </div>

        <div>
            <h3 class="font-semibold text-gray-700">Email</h3>
            <a href={`mailto:${contactInfo.email}`} class="text-primary hover:underline">
              {contactInfo.email}
            </a>
        </div>

        <div>
            <h3 class="font-semibold text-gray-700">Telefoon</h3>
            <a href={`tel:${contactInfo.phone}`} class="text-primary hover:underline">
              {contactInfo.phone}
            </a>
        </div>

        <div>
            <h3 class="font-semibold text-gray-700">Bereikbaarheid</h3>
            <p class="text-gray-600">{contactInfo.hours}</p>
        </div>

    </div>
</div>