---
const projects = [
  {
    title: "Dak renovatie",
    description: "Volledige dak renovatie met nieuwe dakpannen en waterproof dekking",
    image: "",
    category: "Daken"
  },
  {
    title: "Badkamer Make-over",
    description: "Luxe badkamerrenovatie met op maat gemaakt tegelwerk",
    image: "/images/bathroom-makeover.jpg",
    category: "Badkamers"
  },
  {
    title: "Woninguitbreiding",
    description: "Twee verdiepingen tellende uitbreiding met master bedroom en suite",
    image: "/images/home-extension.jpg",
    category: "Toiletten"
  }
];
---

<section class="py-20">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold mb-4">Featured Projects</h2>
            <p class="text-xl text-gray-600">Some of our best work</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {projects.map(project => (
                  <div class="group relative overflow-hidden rounded-lg shadow-md">
                      <div
                              class="aspect-video bg-gray-200 bg-cover bg-center"
                              style={`background-image: url(${project.image})`}
                      >
                      </div>
                      <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex items-end p-6 text-white opacity-0 group-hover:opacity-100 transition-opacity">
                          <div>
                              <p class="text-sm font-semibold text-primary-200">{project.category}</p>
                              <h3 class="text-xl font-bold mb-2">{project.title}</h3>
                              <p class="text-sm">{project.description}</p>
                          </div>
                      </div>
                  </div>
          ))}
        </div>

        <div class="text-center mt-12">
            <a
                    href="/projects"
                    class="inline-block bg-primary hover:bg-primary/90 text-white px-8 py-3 rounded-lg font-semibold transition-colors"
            >
                View All Projects
            </a>
        </div>
    </div>
</section>