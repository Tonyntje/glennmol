---
const services = [
  {
    title: "Renovatie",
    description: "Complete renovatiediensten voor uw woning, afgestemd op uw wensen en visie.",
    icon: "🏠"
  },
  {
    title: "Verbouwing",
    description: "Keuken-, badkamer- en kamergerichte verbouwingen met vakmanschap.",
    icon: "🔨"
  },
  {
    title: "Schilderwerk",
    description: "Binnen- en buitenschilderwerk met hoogwaardige materialen.",
    icon: "🎨"
  },
  {
    title: "Tegelwerk",
    description: "Professioneel tegelwerk voor vloeren, wanden en maatwerkontwerpen.",
    icon: "🔲"
  }
];
---

<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold mb-4">Diensten</h2>
            <p class="text-xl text-gray-600">Totaaloplossingen voor bouw en verbouwing</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {services.map(service => (
                  <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
                      <div class="text-4xl mb-4">{service.icon}</div>
                      <h3 class="text-xl font-semibold mb-2">{service.title}</h3>
                      <p class="text-gray-600">{service.description}</p>
                  </div>
          ))}
        </div>
    </div>
</section>